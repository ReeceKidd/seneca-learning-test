{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "types": ["jest"],
        "pretty": true,
        "strict": true,
        "removeComments": true,
        "baseUrl": ".",
        "paths": {

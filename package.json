{
    "name": "node-starter",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/src/server.js",
        "dist": "sh ./scripts/dist.sh",
        "dev": "nodemon --exec ts-node -- ./src/server.ts",
        "lint": "eslint **/*.ts --ignore-pattern node_modules/",
        "unit-tests": "jest --config=./jest.unit.config.js --coverage --detectOpenHandles",
        "intergration-tests": "jest --config=./jest.intergration.config.js --forceExit --runInBand",
        "test": "npm run unit-tests && npm run intergration-tests",
        "preversion": "npm run lint",
        "version": "git push",
        "update": "npm version patch"
    },
    "keywords": [],
    "author": "Reece Kidd",
    "license": "ISC",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "joi": "^13.6.0",
        "mongoose": "^5.9.4"
    },
    "devDependencies": {
        "@types/jest": "^26.0.13",
        "@types/mongoose": "^5.7.36",
        "@types/express": "^4.17.8",
        "@types/joi": "^13.6.3",
        "@typescript-eslint/eslint-plugin": "^2.3.2",
        "@typescript-eslint/parser": "^2.3.2",
        "husky": "^1.3.1",
        "jest": "^23.6.0",
        "nodemon": "^1.19.1",
        "prettier": "1.19.1",
        "eslint": "^7.8.1",
        "eslint-config-prettier": "^6.4.0",
        "eslint-plugin-prettier": "^3.1.1",
        "pretty-quick": "^1.11.1",
        "ts-jest": "^23.10.4",
        "ts-node": "^7.0.1",
        "typescript": "^3.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && pretty-quick --staged --verbose",
            "pre-push": "npm run unit-tests"
        }
    }
}
